{
  "manifest_version": 3,
  "name": "English Learning Assistant",
  "version": "1.0",
  "description": "Học tiếng Anh bằng cách thay thế từ vựng trên các trang web tiếng Việt",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/icon-1.png",
        "24": "icons/icon-2.png",
        "32": "icons/icon-3.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/modules/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon-1.png",
    "24": "icons/icon-2.png",
    "32": "icons/icon-3.png"
  }
}
